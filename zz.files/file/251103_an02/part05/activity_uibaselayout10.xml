<?xml version="1.0" encoding="utf-8" ?>

<!-- Layout Definition : RelativeLayout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="#cccccc"
	android:padding="5dp">
	
	<ImageView  
		android:id="@+id/Imageview"  
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_alignParentLeft="true"
		android:layout_marginRight="5dp"
		android:src="@mipmap/ic_launcher"/>
	
	<Button  
		android:id="@+id/button_delete"  
		android:layout_width="wrap_content" 
		android:layout_height="35dp" 
		android:layout_below="@id/Imageview"
		android:textSize="15sp"
		android:text="삭제" />
	
	<TextView  
		android:id="@+id/textview_name"  
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_toRightOf="@id/Imageview"
		android:paddingLeft="10dp"
		android:textColor="#000000"
		android:textSize="24sp" 
		android:text="홍길동"/>
	
	<TextView
		android:id="@+id/textview_phone_number"  
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_alignParentRight="true"
		android:layout_alignBaseline="@id/textview_name"
		android:textColor="#0000ff"
		android:textSize="12sp"
		android:text="010-3333-7777" />
	
	<TextView  
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_below="@id/textview_name"
		android:layout_alignLeft="@id/textview_name"
		android:paddingLeft="10dp"
		android:textColor="#000000"
		android:textSize="12sp"
		android:text="안녕하세요. 개발자 홍길동 입니다\n 오늘도 힘찬하루보네세요.\n 감사합니다." />

</RelativeLayout>