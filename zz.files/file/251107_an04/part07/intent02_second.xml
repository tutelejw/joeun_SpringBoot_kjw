<?xml version="1.0" encoding="utf-8" ?>

<!-- Layout Definition : RelativeLayout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding">

  <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/color_blue"
        android:text="2번 Activity UI" />
    
    <android.widget.Button
        android:id="@+id/button_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"

        android:onClick="xmlOnClick"

		android:text="3번 Activity로....."/>
    
     <android.widget.Button
	        android:id="@+id/button_to_third"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/button_close"

	        android:onClick="xmlOnClick"

	        android:text="Close"/>
    
    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_to_third" />
    
</RelativeLayout>